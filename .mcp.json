{
  "mcpServers": {

    "context7": {
      "command": "pwsh",
      "args": ["-Command", "npx", "-y", "@upstash/context7-mcp@latest"],
      "description": "Documentación actualizada de librerías directo en el prompt."
    },

    "sequential-thinking": {
      "command": "pwsh",
      "args": ["-Command", "npx", "-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Razonamiento paso a paso para problemas complejos."
    },

    "github": {
      "command": "pwsh",
      "args": ["-Command", "npx", "-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "Gestión de repositorio: PRs, issues, branches."
    },

    "filesystem": {
      "command": "pwsh",
      "args": ["-Command", "npx", "-y", "@modelcontextprotocol/server-filesystem", "./src"],
      "description": "Lectura y escritura controlada de archivos en src/."
    },

    "git": {
      "command": "pwsh",
      "args": ["-Command", "npx", "-y", "@modelcontextprotocol/server-git", "--repository", "."],
      "description": "Historial de commits, diffs, branches."
    }
  }
}